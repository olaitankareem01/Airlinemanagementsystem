<h3>List OF Bookings</h3>


<table class="table table-responsive table-striped table-bordered">
    <thead>
        <th>ID</th>
        <th>Booking No</th>
        <th>passenger ID</th>
        <th>Flight ID</th>
        <th>Seat No</th>
        <th colspan="2">Action</th>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td>{{ID}}</td>
             <td> {{bookingno}}</td>
             <td> {{passenger_id}}</td>
             <td>{{flight_id}}</td>
             <td>{{seatno}}</td>
             <td> <a class="btn btn-sm btn-warning" href="/managebookings/update/{{ID}}">Edit</a></td>
             <td><a class="btn btn-sm btn-danger" href="/managebookings/delete/{{ID}}">Delete</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>




