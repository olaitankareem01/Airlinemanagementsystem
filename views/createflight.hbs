<h3>Fill the form below to create flight</h3>

<form method="POST" action='create'>
 <div class="row">
     <div class="col-md-10">
         <div class="card">
             <div class="card-header text-center">
                CREATE FLIGHT
             </div>
         <div class="card-body">
         <div class="form-group">
             <label>flightno</label> 
             <input  class="form-control"name='flightno' type='number'>
         </div>
         
          <div class="form-group">
             <label>Take-off point</label> 
             <input  class="form-control"name='takeoffpoint' type='text'>
         </div>
         <div class="form-group">
             <label>Take-off Time</label> 
             <input class="form-control"name='takeofftime' type='datetime-local'>
         </div>
          <div class="form-group">
             <label>Landing point</label> 
             <input  class="form-control"name='landingpoint' type='text'>
         </div>
          <div class="form-group">
             <label>Aircraft</label>
             <select name='aircraft_id' class="form-control">
                 {{#each data}}
                 <option value='{{ID}}'>{{aircraftno}}</option>
                 {{/each}}
             </select>
         </div>
         </div>
          <div class="text-center"> 
         <button class="btn btn-primary" type="submit">save</button>
         </div>
     </div>
     </div>
 
</form>