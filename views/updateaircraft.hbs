<h3>Fill the form below to edit aircraft</h3>

<form method="POST" action='/manageaircrafts/update'>
    <input type="hidden" name='ID' value="{{ID}}">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Aircraft No</label>
                <input class="form-control" value="{{aircraftno}}" name='aircraftno' type='text'>
            </div>
            <div class="form-group">
                <label>Capacity</label>
                 <input class="form-control" value="{{capacity}}" name='capacity' type='number'>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Name</label>
                 <input class="form-control" value="{{name}}" name='name' type='text'>
            </div>
            <div class="form-group">
                <label>Type</label> 
                <input class="form-control" value="{{type}}" name='type' type='text'>
            </div>
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Update</button>
        </div>
    </div>
</form>