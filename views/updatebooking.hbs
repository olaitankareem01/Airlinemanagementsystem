<h3>Fill the form below to update booking</h3>

<form method="POST" action='/managebookings/update'>
    <input type="hidden" name='ID' value="{{ID}}">
 <div class="row">
     <div class="col-md-6">
          <div class="form-group">
              <label>Booking ID</label>
             <input class="form-control" value="{{bookingid}}" name='bookingid' type='number'>
         </div>
         <div class="form-group">
             <label>Booker's name</label> 
             <input  class="form-control" value="{{bookersname}}"name='bookersname' type="text">
         </div>
     </div>
     <div class="col-md-6">
         
          <div class="form-group">
            <label>Flight ID</label> 
            <input  class="form-control" value="{{flight_id}}"name='flight_id' type='number'>
         </div>
          <div class="form-group">
            <label>seat no</label>
             <input class="form-control" value="{{seatno}}" name='seatno' type='number'>
         </div>
     </div>
       <div class="text-center">
            <button class="btn btn-primary" type="submit">update</button>
        </div>
     </div>

</form>